{
  "name": "phpcloud.com Sniffer",
  "description": "phpcloud.com sniffer integrates into the PHP runtime environment and watches for various events such as errors, failing functions, slow scripts, database errors, etc. This information can then be used to perform root cause analysis.",
  "version": "0.0.2",
  "icons": { "16": "images/phpcloud.png", "48" : "images/cloud.gif" },	
  "permissions": ["tabs", "notifications", "cookies", "*://*.devpaas.zend.com/*", "*://*.projectx.zend.com/*", "*://*.phpcloud.com/*"],
  "browser_action": {
    "default_icon": "images/phpcloud.png", 
    "default_title": "phpcloud.com Sniffer",      
    "default_popup": "popup.html"        
  },
  "content_scripts": [
    {
      "matches": ["*://*.devpaas.zend.com/*", "*://*.projectx.zend.com/*", "*://*.phpcloud.com/*"],
      "css": ["style/style.css"],
      "js": ["scripts/content.js", "scripts/jquery.js", "scripts/devcloud.js", "scripts/tinyfader.js"]
    }
  ],
  "background_page": "background.html"
}
